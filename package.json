{
  "name": "angular-apps",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "watch": "ng build --watch --configuration development",
    "========== comment line MD CO ==========": "",
    "start md-co": "npm-run-all clean --parallel lib:watch mdCO:start-waiton",
    "mdCO:start-waiton": "wait-on dist/hpfb/sdk/package.json && npm run mdCO:start",
    "mdCO:start": "ng serve --project=md-co --port 5002 -o",
    "prod-md-co:build": "npm-run-all clean lib:build prod-md-co",
    "prod-md-co": "npm run prod-md-co-external & npm run prod-md-co-internal",
    "prod-md-co-external": "npm run prod-md-co-external-en & npm run prod-md-co-external-fr",
    "prod-md-co-external-en": "ng run md-co:build:production-external-en & npm run postBuild --template=md-co-external --language=en",
    "prod-md-co-external-fr": "ng run md-co:build:production-external-fr & npm run postBuild --template=md-co-external --language=fr",
    "prod-md-co-internal": "npm run prod-md-co-internal-en & npm run prod-md-co-internal-fr",
    "prod-md-co-internal-en": "ng run md-co:build:production-internal-en & npm run postBuild --template=md-co-internal --language=en",
    "prod-md-co-internal-fr": "ng run md-co:build:production-internal-fr & npm run postBuild --template=md-co-internal --language=fr",
    "========== comment line MD RT ==========": "",
    "start md-rt": "npm-run-all clean --parallel lib:watch mdRT:start-waiton",
    "mdRT:start-waiton": "wait-on dist/hpfb/sdk/package.json && npm run mdRT:start",
    "mdRT:start": "ng serve --project=md-rt --port 2002 -o",
    "========== comment line MD AI ==========": "",
    "start md-ai": "npm-run-all clean --parallel lib:watch mdAIstart-waiton",
    "mdAI:start-waiton": "wait-on dist/hpfb/sdk/package.json && npm run mdAI:start",
    "mdAI:start": "ng serve --project=md-ai --port 2002 -o",
    "========== comment line common post build scripts==========": "",
    "postBuild": "node ./projects/hpfb/sdk/post.build.js",
    "postBuildSubEnvDependency": "node ./projects/hpfb/sdk/env.dependency.js",
    "postBuildSubUpdateDist": "node ./projects/hpfb/sdk/update.dist.js",
    "========== comment line common lib scripts==========": "",
    "lib:build": "ng build @hpfb/sdk",
    "lib:watch": "ng build @hpfb/sdk --watch --configuration development",
    "lib:test": "ng test @hpfb/sdk",
    "lib:package": "cd dist/hpfb/sdk && npm pack",
    "lib:buildAndPack": "run-s lib:build lib:package",
    "clean": "rimraf dist"

  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "crypto-js": "^4.2.0",
    "file-saver": "^2.0.5",
    "font-awesome": "^4.7.0",
    "replace-in-file": "^7.0.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "util": "^0.12.5",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.6",
    "@angular/cli": "^17.0.6",
    "@angular/compiler-cli": "^17.0.0",
    "@types/file-saver": "^2.0.7",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^17.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "typescript": "~5.2.2",
    "wait-on": "^7.2.0"
  }
}
