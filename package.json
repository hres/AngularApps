{
  "name": "angular-apps",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "watch": "ng build --watch --configuration development",
    "========== comment line, Master File ==========": "",
    "start-mf:rt": "pnpm --filter mf-rt start",
    "build-mf-rt": "npm run clean-dist && pnpm --filter mf-rt build",
    "========== comment line, PharmaBio REP RT ==========": "",
    "start-pbv:rt": "pnpm --filter pbv-rt start",
    "========== comment line, hpfb/sdk lib scripts==========": "",
    "sdk-lib:build": "ng build @hpfb/sdk",
    "sdk-lib:watch": "ng build @hpfb/sdk --watch --configuration development",
    "sdk-lib:package": "cd dist/hpfb/sdk && npm pack",
    "sdk-lib:move": "npm run move-file -- --source_relative_path ./dist/hpfb/sdk --filename_pattern hpfb-*.tgz --destination_relative_path ./libs",    
    "sdk-lib:buildPackageAndMove": "run-s sdk-lib:build sdk-lib:package sdk-lib:move",
    "========== comment line, util scripts==========": "",
    "clean-dist": "rimraf dist",
    "move-file": "python ./python/utils/move-file.py  "
  },
